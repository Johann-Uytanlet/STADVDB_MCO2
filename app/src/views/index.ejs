<!DOCTYPE html>
<html lang="en">

<head>
  <%-include("./head.ejs") %>
</head>

<body>

  <!-- Header and Hero Section -->
  <%- include("./header.ejs") %>


    <!-- About Section -->
    <%-include("./about.ejs") %>


      <!-- ======= Services Section ======= -->
      <%-include("./feature.ejs") %>


        <main id="main">


          <!-- ======= Stats Counter Section ======= -->
          <section id="stats-counter" class="stats-counter section-bg">
            <div class="container">
              <header class="section-header">
                <h3>Analytics</h3>
              </header>
              <div class="row gy-4 justify-content-center">

                <div class="col-lg-3 col-md-6">
                  <div class="stats-item d-flex align-items-center w-100 h-100">
                    <i class="bi bi-clock color-blue flex-shrink-0"></i>
                    <div>
                      <div class = "symbol">
                        <span data-purecounter-start="0" data-purecounter-end= "<%= avg_consultation_time %>" data-purecounter-duration="1"
                          class="purecounter"></span>
                          <div><font size="6">hr</font></div>
                      </div>
                      
                      <p>Average Consultation Time</p>
                    </div>
                  </div>
                </div><!-- End Stats Item -->

                <div class="col-lg-3 col-md-6">
                  <div class="stats-item d-flex align-items-center w-100 h-100">
                    <i class="bi bi-person-fill color-orange flex-shrink-0"></i>
                    <div>
                      <div class = "symbol">
                        <span data-purecounter-start="0" data-purecounter-end="<%= avg_queue_time %>" data-purecounter-duration="1"
                          class="purecounter"></span>
                          <div><font size="6">hr</font></div>
                      </div>
                      <p>Average Queue Time</p>
                    </div>
                  </div>
                </div><!-- End Stats Item -->

                <div class="col-lg-3 col-md-6">
                  <div class="stats-item d-flex align-items-center w-100 h-100">
                    <i class="bi bi-check-circle-fill color-green flex-shrink-0"></i>
                    <div>
                      <div class = "symbol">
                        <span data-purecounter-start="0" data-purecounter-end="<%= completed %>" data-purecounter-duration="1"
                          class="purecounter"></span>
                          <div><font size="6">%</font></div>
                      </div>
                      <p>Completed Appointments</p>
                    </div>
                  </div>
                </div><!-- End Stats Item -->
              </div>

            </div>
          </section><!-- End Stats Counter Section -->

          <!-- End features Section -->

          <!--summary report-->




          <!--search form-->
          <div class="my-5" id="search-container">
            <div class="container">
              <div class="d-flex justify-content-between">
                <p class="h2"><b>Search</b> an Appointment</p>
                  <div class="d-flex align-content-center">
                    <p class="h2 me-2">Select <b>node</b>:</p>
                    <button type="button" class="btn btn-secondary dropdown-toggle" id="nodeDropdown" data-bs-toggle="dropdown" aria-expanded="false">Node</button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" onclick="showNode(this)" value="1">Node 1 (Master)</a></li>
                        <li><a class="dropdown-item" onclick="showNode(this)" value="2">Node 2 (Slave)</a></li>
                        <li><a class="dropdown-item" onclick="showNode(this)" value="3">Node 3 (Slave)</a></li>
                    </ul>
                </div>
              </div>
              <form id="Search-Form" class="p-2">
                <div>
                  <label for="appointment_id_search" class="fw-bold">AppId</label>
                  <input type="text" class="form-control underline" id="appointment_id_search" placeholder="">
                </div>
                <div class="d-flex justify-content-center m-3">
                  <button type="submit" id="search-btn" class="btn btn-primary">Search</button>
                </div>
              </form>
              <div class="container display-searched-appointment mt-3">

              </div>
            </div>
          </div>


          <!-- table -->

          <section class="container appointment-details">
            <div class="container container-table">
              <div class="table-title d-flex justify-content-between align-items-center">
                <div>
                  <h2 class="mx-1 my-3 container-title">Appointment <b>Details</b></h2>
                </div>
                <div>
                  <div><button type="button" class="btn btn-info add-new">Add New</button></div>
                  <div><button type="button" class="btn btn-danger back">Back</button></div>
                </div>
              </div>
            </div>

            <div class="show-insert-status m-0 p-2">

            </div>

            <div class="container switch">
              <div>
                <table class="table table-hover" id="table-section">
                  <thead>
                    <tr>
                      <th>apid</th>
                      <th>status</th>
                      <th>Time Queued</th>
                      <th>Queue Date</th>
                      <th>Start Time</th>
                      <th>End time</th>
                      <th>Type</th>
                      <th>isVirtual</th>
                      <th>Major Island</th>
                      <th>Hospital Name</th>
                      <th>Hospital/Clinic</th>
                    </tr>
                  </thead>
                  <tbody>

                  <% viewApp.forEach(element => { %>
                    <tr>
                      <td><%= element.apptid %></td>
                      <td><%= element.status %></td>
                      <td><%= element.TimeQueued %></td>
                      <td><%= element.QueueDate %></td>
                      <td><%= element.StartTime %></td>
                      <td><%= element.EndTime %></td>
                      <td><%= element.type %></td>
                      <td><%= element.IsVirtual %></td>
                      <td><%= element.MajorIsland %></td>
                      <td><%= element.hospitalname %></td>
                      <td><%= element.IsHospital %></td>
                    </tr>
                  <% }) %>

                     

                    
                  </tbody>
                </table>

                <div class="d-flex justify-content-end align-items-center m-2 next-page-section">
                  <label for="Page-number" style="padding-right: 5px;">Page:</label>
                  <div class="d-flex justify-content-center" style="padding-right: 5px;">
                    <input type="text" id="page-number"
                      style="width: 40px; border-radius: 5px; height: 30px; text-align: center;" value="1">
                  </div>
                  <button id="prevBtn" data-mdb-ripple-color="dark" data-mdb-ripple-init=""
                    class="btn btn-link datatable-pagination-button datatable-pagination-left"><i
                      class="fa fa-chevron-left"></i></button>
                  <button id="nextBtn" data-mdb-ripple-color="dark" data-mdb-ripple-init=""
                    class="btn btn-link datatable-pagination-button datatable-pagination-right"><i
                      class="fa fa-chevron-right"></i></button>
                </div>
              </div>

              <form id="addNewAppointment">
                <div class="row mb-2">
                  <div class="col-md-6 p-1">
                    <div class="input-group form-floating">
                      <input type="text" class="form-control" id="app-hospitalname" placeholder="Makati Medical Center">
                      <label for="app-hospitalname">Hospital Name</label>
                    </div>
                  </div>
                  <div class="col-md-6 p-1">
                    <div class="input-group form-floating">
                      <select class="form-select" id="app-region" aria-label="Region">
                        <!-- RETURN exact name as string -->
                        <option value="Luzon">Luzon</option>
                        <option value="Visayas">Visayas</option>
                        <option value="Mindanao">Mindanao</option>
                      </select>
                      <label for="type">Region</label>
                    </div>
                  </div>
                </div>

                <div class="row mb-2">
                  <div class="col-md-4 p-1">
                    <div class="input-group form-floating">
                      <select class="form-select" id="app-status" aria-label="Status">
                        <!-- RETURN exact name as string -->
                        <option value="Complete">Complete</option>
                        <option value="Cancel">Cancel</option>
                        <option value="Serving">Serving</option>
                        <option value="NoShow">NoShow</option>
                        <option value="Skip">Skip</option>
                      </select>
                      <label for="app-status">Status</label>
                    </div>
                  </div>
                  <div class="col-md-4 p-1">
                    <div class="input-group form-floating">
                      <select class="form-select" id="app-method" aria-label="Method">
                        <!-- RETURN 1 if Virtual and 0 if Face-to-Face -->
                        <option value="1">Virtual</option>
                        <option value="0">Face-to-Face</option>
                      </select>
                      <label for="type">Appointment Method</label>
                    </div>
                  </div>
                  <div class="col-md-4 p-1">
                    <div class="input-group form-floating">
                      <select class="form-select" id="app-type" aria-label="Type">
                        <option value="Consultation">Consultation</option>
                        <option value="Inpatient">Inpatient</option>
                      </select>
                      <label for="app-type">Appointment Type</label>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col">
                    <div class="row p-0 mt-1">
                      <label for="time_queued" class="form-label">Time Queued:</label>
                      <div class="col-md-6 p-1">
                        <input type="date" class="form-control" id="date_queued" name="date_queued">
                      </div>
                      <div class="col-md-6 p-1">
                        <input type="time" class="form-control" id="time_queued" name="time_queued">
                      </div>
                    </div>
                  </div>
                  <div class="col">
                    <div class="row p-0 mt-1">
                      <label class="form-label">Queue Date:</label>
                      <div class="col-md-6 p-1">
                        <input type="date" class="form-control" id="queue_date" name="queue_date">
                      </div>
                      <div class="col-md-6 p-1">
                        <input type="time" class="form-control" id="queue_time" name="queue_time">
                      </div>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col">
                    <div class="row p-0 mt-1">
                      <label class="form-label">Start Time:</label>
                      <div class="col-md-6 p-1">
                        <input type="date" class="form-control" id="start_date" name="start_date">
                      </div>
                      <div class="col-md-6 p-1">
                        <input type="time" class="form-control" id="start_time" name="start_time">
                      </div>
                    </div>
                  </div>
                  <div class="col">
                    <div class="row p-0 mt-1">
                      <label class="form-label">End Time:</label>
                      <div class="col-md-6 p-1">
                        <input type="date" class="form-control" id="end_date" name="end_date">
                      </div>
                      <div class="col-md-6 p-1">
                        <input type="time" class="form-control" id="end_time" name="end_time">
                      </div>
                    </div>
                  </div>
                </div>
                <div class="container mt-3 text-center">
                  <button type="submit" id="submitAppForm" class="btn btn-primary btn-md py-1 px-3">Submit</button>
                </div>

              </form>
            </div>
          </section>


        </main><!-- End #main -->

        <!-- Footer -->
        <%- include("./footer.ejs") %>

          <!-- Vendor JS Files -->
          <script defer src="/vendor/purecounter/purecounter_vanilla.js"></script>
          <script defer src="/vendor/aos/aos.js"></script>
          <script defer src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
          <script defer src="/vendor/glightbox/js/glightbox.min.js"></script>
          <script defer src="/vendor/isotope-layout/isotope.pkgd.min.js"></script>
          <script defer src="/vendor/swiper/swiper-bundle.min.js"></script>
          <script defer src="/vendor/php-email-form/validate.js"></script>

          <!-- Template Main JS File -->
          <script defer src="/js/main.js"></script>
          

</body>

</html>